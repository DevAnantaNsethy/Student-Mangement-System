	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default base URL if not defined",
					"if (!pm.environment.get('BASE_URL')) {",
					"  pm.environment.set('BASE_URL', 'http://localhost:3001');",
					"}",
					"",
					"// Auto-extract user ID from login response",
					"if (pm.response.code === 200 && pm.request.url.path.includes('/api/login')) {",
					"  const response = pm.response.json();",
					"  if (response.success && response.user && response.user.id) {",
					"    pm.environment.set('USER_ID', response.user.id);",
					"    pm.environment.set('USER_EMAIL', response.user.email);",
					"    pm.environment.set('USER_NAME', response.user.name);",
					"  }",
					"}",
					"",
					"// Auto-extract user ID from register response",
					"if (pm.response.code === 200 && pm.request.url.path.includes('/api/register')) {",
					"  const response = pm.response.json();",
					"  if (response.success && response.user && response.user.id) {",
					"    pm.environment.set('USER_ID', response.user.id);",
					"    pm.environment.set('USER_EMAIL', response.user.email);",
					"    pm.environment.set('USER_NAME', response.user.name);",
					"  }",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Common test assertions",
					"pm.test('Response time is less than 3000ms', function () {",
					"  pm.expect(pm.response.responseTime).to.be.below(3000);",
					"});",
					"",
					"pm.test('Response has proper Content-Type', function () {",
					"  pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
					"});",
					"",
					"// Success response test",
					"if (pm.response.code >= 200 && pm.response.code < 300) {",
					"  pm.test('Success response has proper structure', function () {",
					"    const response = pm.response.json();",
					"    pm.expect(response).to.have.property('success');",
					"    pm.expect(response.success).to.be.true;",
					"  });",
					"}",
					"",
					"// Error response test",
					"if (pm.response.code >= 400) {",
					"  pm.test('Error response has proper structure', function () {",
					"    const response = pm.response.json();",
					"    pm.expect(response).to.have.property('success');",
					"    pm.expect(response.success).to.be.false;",
					"    pm.expect(response).to.have.property('message');",
					"  });",
					"}"
				]
			}
		}
	],
