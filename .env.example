# Copy this file to .env and fill in your values once.
# Then you can run the whole app with a single command: npm start

# Gmail SMTP (required for real emails)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password

# Server port (optional; defaults to 3001)
PORT=3001

# MongoDB (optional; only used by start-local-server.js)
# Use local Mongo for development, or your own connection string
MONGO_URI=mongodb://127.0.0.1:27017/sms
